@model List<TechJobs6Persistent.Models.Skill>

<h1>All Job Skills</h1>

@if (Model.Count == 0)
{
        <p>No skills have been added yet!</p>
}
 else
{
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Skill Name</th>
                <th>Skill Description</th>
            </tr>
            @foreach(Skill skill in Model)
{
                    <tr>
                        <td>@skill.Id</td>
                        <td><a asp-controller="Skill" asp-action="About" asp-route-id="@skill.Id">@skill.SkillName</a></td>
                        <td>@skill.SkillDescription</td>
                    </tr>

}
        </table>
}