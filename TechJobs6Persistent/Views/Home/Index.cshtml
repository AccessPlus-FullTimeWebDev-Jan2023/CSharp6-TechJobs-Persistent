@{
    ViewData["Title"] = "Tech Jobs Persistent";
}

@model List<TechJobs6Persistent.Models.Job>

<div class="text-center">
    <h1 class="display-4">Welcome to TechJobs!</h1>
    <p><a asp-controller="Home" asp-action="Add">Add Jobs</a></p>
    <p><a asp-controller="Employer" asp-action="Add">Add Employer</a></p>
    @*<p><a asp-controller="Skill" asp-action="Add">Add Skills</a></p>*@
</div>

@if (Model.Count == 0)
{
    <p>No jobs yet!</p>
}
else
{
<table class="table">
    <tr>
        <th>Position Name</th>
        <th>Employer</th>
    </tr>
    @foreach (var job in Model)
    {
        <tr>
            <td><a asp-controller="Home" asp-action="Detail" asp-route-id="@job.JobId">@job.JobName</a></td>
            <td>@job.Employer.EmployerName</td>
        </tr>

    }
</table>
}
